#include<bits/stdc++.h>

using namespace std;

int main(){
    int t;
    cin>>t;
    while(t--){
        string str,pattern;
        cin>>str>>pattern;
        size_t match_ind=0,del_count=0;
        for(size_t i=0;i<str.size();i++){
            if(str[i]==pattern[match_ind]){
                match_ind++;
            }
            else{
                if(match_ind>0)
                    del_count++;
            }
            if(match_ind==pattern.size())
                break;
        }
        if(match_ind==pattern.size())
            cout<<"YES "<<del_count<<endl;
        else
            cout<<"NO"<<endl;
    }
    return 0;
}
