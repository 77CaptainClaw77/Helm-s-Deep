#include <stdio.h>
#include <stdlib.h>
#include <limits.h>
void Prim(int** G,int n){
  int v=0; //First vertex
  int *S=calloc(n,sizeof(int));
  for(int i=0;i<n;i++){
    int min=INT_MAX;
    for(int j=0;j<n;j++){
      if(G[v][j]!=-1 && S[j]==0 && G[v][j]<min)
	min=j;
    }
    if(min==INT_MAX){
      printf("Graph is disconnected!\n");
      exit(1);
    }
    printf("%d\t",min);
    S[min]=1;
    v=min;
  }
}
int main(int argc, char *argv[]){
  int **G,n,i,j;
  printf("Enter the number of vertices");
  scanf("%d", &n);
  G=malloc(sizeof(int*)*n);
  for (i = 0; i < n; ++i) {
    G[i]=malloc(sizeof(int)*n);
  }
  printf("Enter the adjacency matrix (Enter \'-1\' if there is no edge):-\n");
  for (i = 0; i < n; ++i) {
    for (j = 0; j < n; ++j) {
      scanf("%d",&G[i][j]);
    }
  }

  return 0;
}
